<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="sawbodeployer.entm.illinois.edu.sawbo.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/search"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:tint="@color/gray"
            android:background="@color/colorPrimary"
            android:layout_gravity="left"/>
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/setting"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:src="@drawable/settings"
            android:background="@color/colorPrimary"
            android:tint="@color/gray"
            android:layout_height="wrap_content"
            android:layout_gravity="right"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:id="@+id/extention_sawbo_image"
        android:layout_below="@+id/toolbar">
        <com.rey.material.widget.ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@+id/toolbar"
            android:src="@drawable/newsawbologo"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView_extention_main"
        android:layout_marginBottom="63dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/extention_sawbo_image">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
           <com.rey.material.widget.Button
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/video_library"
            android:textColor="@color/colorPrimary"
            android:padding="19dp"
            android:textSize="18sp"
            android:drawableRight="@drawable/play_menu"
            android:drawableTint="@color/colorPrimary"
            android:textAlignment="textStart"
            android:background="@color/blue_dark"
            tools:ignore="RtlCompat" />

        <com.rey.material.widget.Button
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/my_videos"
            android:textColor="@color/colorPrimary"
            android:padding="19dp"
            android:textSize="18sp"
            android:drawableRight="@drawable/play_menu"
            android:drawableTint="@color/colorPrimary"
            android:textAlignment="textStart"
            android:background="@color/blue"
            tools:ignore="RtlCompat" />


        <com.rey.material.widget.Button
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/share_sawbo_apps"
            android:textColor="@color/colorPrimary"
            android:padding="19dp"
            android:textSize="18sp"
            android:drawableRight="@drawable/play_menu"
            android:drawableTint="@color/colorPrimary"
            android:textAlignment="textStart"
            android:background="@color/blue_light"
            tools:ignore="RtlCompat" />


            <com.rey.material.widget.Button
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/donate"
                android:textColor="@color/colorPrimary"
                android:padding="19dp"
                android:textSize="18sp"
                android:drawableRight="@drawable/play_menu"
                android:drawableTint="@color/colorPrimary"
                android:textAlignment="textStart"
                android:background="@color/green"
                tools:ignore="RtlCompat" />
    </LinearLayout>
    </ScrollView>
   <!-- <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:menu="@menu/bottom_navigation"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/gray">


    </android.support.design.widget.BottomNavigationView>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.rey.material.widget.ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
            android:paddingLeft="0dp"
        android:layout_weight="0.01"
            android:tint="@color/gray"
            android:background="@color/transparent"/>
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="0.02"/>

        <com.rey.material.widget.ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_library"
            android:layout_weight="0.01"
            android:tint="@color/gray"
            android:background="@color/transparent"/>

        <com.rey.material.widget.ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_menu"
            android:layout_weight="0.01"
            android:tint="@color/gray"
            android:background="@color/transparent"/>

        <com.rey.material.widget.ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            android:layout_weight="0.01"
            android:tint="@color/gray"
            android:background="@color/transparent"/>
        <com.rey.material.widget.ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info"
            android:tint="@color/gray"
            android:layout_weight="0.01"
            android:background="@color/transparent"/>


    </LinearLayout>


</RelativeLayout>
