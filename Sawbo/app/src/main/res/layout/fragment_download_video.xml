<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:background="#80FFFFFF"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/extention_video_download">
        <com.rey.material.widget.TextView
            android:layout_width="wrap_content"
            android:text="@string/video_library"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:textSize="16.2pt"
            android:id="@+id/title_video_download"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#80FFFFFF"
        android:layout_below="@+id/extention_video_download"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/blue_dark"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:id="@+id/btn_download_standard"
            android:layout_marginLeft="12dp"
            android:textSize="7.3pt"
            android:layout_marginRight="12dp"
            android:text="STANDARD FILE"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/btn_download_lite"
            android:layout_below="@+id/btn_download_standard"
            android:background="@color/blue"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:textSize="7.3pt"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="LITE FILE"/>
    </RelativeLayout>

    </RelativeLayout>

</FrameLayout>